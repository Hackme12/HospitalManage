<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:id="@+id/layout2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/tvWeight"
            android:text="Weight"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:gravity="center"

            >

        </TextView>

        <EditText
            android:id="@+id/edWeight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:paddingStart="60dp"
            android:hint="Weight               lb"

            />


    </LinearLayout>
    <LinearLayout

        android:id="@+id/layout3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/tvHeight"
            android:text="Height "
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:gravity="center"
            >
        </TextView>
        <EditText
            android:id="@+id/edHeight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="60dp"
            android:hint="Height               in"
            android:textAlignment="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/layout4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/tvBp"
            android:text="Blood Pressure "
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:gravity="center"
            >
        </TextView>
        <EditText
            android:id="@+id/edBp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="60dp"
            android:hint="BP              mmHg"
            android:textAlignment="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/layout5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/tvReason"
            android:text="Reason to Visit"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:gravity="center"
            >
        </TextView>
        <EditText
            android:id="@+id/edReason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="60dp"
            android:hint=""
            android:singleLine="true"
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:inputType="textMultiLine"
            android:enabled="true"
            android:minLines="4"
            android:maxLines="4"
            android:isScrollContainer="true"
            android:focusable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <Button
            android:id="@+id/btn_Update"
            android:layout_marginHorizontal="60dp"
            android:layout_width="300dp"
            android:background="@drawable/input_design_btn"
            android:backgroundTint="#C1E8E4"
            android:layout_height="match_parent"
            android:text="Update"

            >

        </Button>


    </LinearLayout>



</LinearLayout>