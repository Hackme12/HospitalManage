<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nurse_icon"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:layout_height="110dp"
            android:layout_marginVertical="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/iconpatient"
            app:civ_border_color="#FF000000"
            >
        </de.hdodenhof.circleimageview.CircleImageView>


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginTop="0dp"

        >

        <EditText
            android:id="@+id/edfullName"
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:drawableLeft="@drawable/iconpeople"
            android:hint="Full Name"
            android:textAlignment="center"

            />

        <EditText
            android:id="@+id/edAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edfullName"
            android:drawableLeft="@drawable/iconaddress"
            android:hint="Address"
            android:textAlignment="center"

            />

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edAddress"
            android:drawableLeft="@drawable/iconphone"
            android:hint="Phone Number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edDob"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edPhone"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:hint="Date of Birth"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edDob"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:hint="Email"
            android:textAlignment="center" />
        <EditText
            android:id="@+id/edInsurance"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edEmail"
            android:hint="Insurance"
            android:textAlignment="center" />



        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edInsurance"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
            android:text="Update"

            />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/btnUpdate"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
            android:text="Next"

            />


    </RelativeLayout>


</RelativeLayout>