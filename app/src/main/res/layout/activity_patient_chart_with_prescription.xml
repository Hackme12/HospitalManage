<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/patient_icon"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:layout_height="60dp"
            android:layout_marginVertical="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/iconpatient"
            app:civ_border_color="#FF000000"
            >
        </de.hdodenhof.circleimageview.CircleImageView>


        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginTop="0dp"

        >


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:drawableLeft="@drawable/iconaddress"
            android:hint="Address"
            android:textAlignment="center"
            android:paddingTop="30dp"

            />
        <TextView
            android:id="@+id/tvDob"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/tvAddress"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:hint="Date of Birth"
            android:paddingTop="30dp"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/tvDob"
            android:drawableLeft="@drawable/iconphone"
            android:hint="Phone Number"
            android:paddingTop="30dp"
            android:textAlignment="center" />



        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/tvPhone"
            android:drawableLeft="@drawable/ic_baseline_date_range_24"
            android:hint="Email"
            android:paddingTop="30dp"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/inside_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_below="@+id/tvEmail"

            >
            <TextView

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Weight:"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:hint="lb"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>
            <TextView

                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:hint="lb"
               android:layout_marginTop="20dp"
                android:paddingTop="20dp"
                android:textSize="10dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Height:"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>
            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:hint="in"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>
            <TextView

                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:hint="in"
                android:textAlignment="viewEnd"
                android:paddingTop="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/inside_layout1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_below="@+id/inside_layout"

            >
        <TextView

            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="Blood Pressure:"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:padding="15dp"
            >
        </TextView>

            <TextView
                android:id="@+id/tvShowBP"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:hint="mmHg"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>
            <TextView

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="mmHg"

                android:paddingTop="20dp"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:padding="10dp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inside_layout2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_below="@+id/inside_layout1"

            >
            <TextView

                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="Reason to Visit:"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>

            <TextView
                android:id="@+id/tvReason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:inputType="textMultiLine"
                android:enabled="true"
                android:minLines="4"
                android:maxLines="4"
                android:isScrollContainer="true"
                android:focusable="true"
                tools:ignore="TextViewEdits" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inside_layout3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_below="@+id/inside_layout2"

            >
            <TextView

                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="     Prescription:"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:padding="15dp"
                >
            </TextView>

            <EditText
                android:id="@+id/edPrescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Add prescription"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:inputType="textMultiLine"
                android:enabled="true"
                android:minLines="4"
                android:maxLines="4"
                android:isScrollContainer="true"
                android:focusable="true"
                tools:ignore="TextViewEdits" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inside_layout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/inside_layout3"


            >
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_below="@+id/inside_layout3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="96dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorAccent"
                android:text="OK" />
            <Button
                android:id="@+id/btn_done"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_below="@+id/inside_layout3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="96dp"
                android:layout_marginStart="-70dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorAccent"
                android:text="Done" />



        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>