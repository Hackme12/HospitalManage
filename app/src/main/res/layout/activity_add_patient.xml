<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55B6BF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Add New Patient"
            android:textSize="30dp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"




            />


        <LinearLayout
            android:id="@+id/Linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Patient Name"
                android:textStyle="italic"
                android:textSize="16.5dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Full Name"
                android:layout_marginEnd="10dp"

                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Linearlayout2"
            android:layout_below="@+id/Linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Date of Birth"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="16.5dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="MM-DD-YYYY"
                android:layout_marginEnd="10dp"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Linearlayout3"
            android:layout_below="@+id/Linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Address"
                android:textStyle="italic"
                android:textSize="16.5dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Street No. Apt No. "
                android:layout_marginEnd="10dp"

                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/Linearlayout4"
            android:layout_below="@+id/Linearlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Email Id"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="16.5dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Email"
                android:layout_marginEnd="10dp"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Linearlayout5"
            android:layout_below="@+id/Linearlayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Phone Number"
                android:textStyle="italic"
                android:textSize="16.5dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Mobile Number"
                android:layout_marginEnd="10dp"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Linearlayout6"
            android:layout_below="@+id/Linearlayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="SSN"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="16.5dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/SSN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Social Security Number"
                android:layout_marginEnd="10dp"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linearlayout7"
            android:layout_below="@+id/Linearlayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Patient Id"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="16.5dp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/patientID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/Patient_Id"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>


        <Button
            android:id="@+id/btn_Add_Patient"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linearlayout7"
           android:layout_centerHorizontal="true"
            android:text="Add Patient"
            android:layout_marginTop="20dp"
            android:backgroundTint="#67AEE6"
            android:background="@drawable/input_design_btn"





            />


    </RelativeLayout>




</ScrollView>