<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imghospital1"
    tools:context=".MainActivity">

     <LinearLayout
         android:id="@+id/linear_layout1"
         android:layout_marginTop="190dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"

         android:orientation="horizontal">



         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/nurse_icon"
             android:layout_width="100dp"
             android:layout_height="110dp"
             android:layout_marginVertical="30dp"
             android:layout_marginStart="20dp"
             android:src="@drawable/icon_nurse"
             app:civ_border_color="#FF000000"

             >
         </de.hdodenhof.circleimageview.CircleImageView>

         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/staff_icon"
             android:layout_width="100dp"
             android:layout_height="110dp"
             android:layout_marginVertical="30dp"
             android:layout_marginStart="40dp"
             android:src="@drawable/icon_staff"
             app:civ_border_color="#FF000000"

             >
         </de.hdodenhof.circleimageview.CircleImageView>
         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/doctor_icon"
             android:layout_width="100dp"
             android:layout_height="110dp"
             android:layout_marginVertical="30dp"
             android:layout_marginStart="35dp"
             android:src="@drawable/icon_doctor"
             app:civ_border_color="#FF000000"

             >
         </de.hdodenhof.circleimageview.CircleImageView>

     </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/linear_layout2"
        android:layout_marginTop="-30dp"
        android:layout_below="@+id/linear_layout1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_nurse"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NURSE"
            android:textStyle="italic"
            android:layout_marginStart="35dp"
            android:background="@drawable/button"

            />
        <Button
            android:id="@+id/btn_staff"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:text="Staff"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"
            android:background="@drawable/button"
            android:layout_marginHorizontal="@android:dimen/app_icon_size"

            />

        <Button
            android:id="@+id/btn_doctor"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:text="Doctor"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:background="@drawable/button"
            android:layout_marginHorizontal="@android:dimen/app_icon_size"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_below="@+id/linear_layout2"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_ceo"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginVertical="30dp"
           android:layout_gravity="center_horizontal"
            android:layout_marginStart="170dp"
            android:src="@drawable/iconceo1"
            app:civ_border_color="#FF000000"
            >
        </de.hdodenhof.circleimageview.CircleImageView>

    </LinearLayout>


    <Button
        android:id="@+id/btn_ceo"
        android:layout_below="@+id/linear_layout3"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:text="CEO"
        android:textStyle="italic"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="180dp"
        android:background="@drawable/button"
        android:layout_height="30dp" />


    <TextView
        android:id="@+id/new_account"
        android:layout_below="@+id/linear_layout2"
        android:text="Don't have an account?"
        android:textStyle="italic"
        android:clickable="true"
        android:textColor="#000000"
        android:layout_marginTop="160dp"
        android:layout_marginStart="250dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
          />




</RelativeLayout>